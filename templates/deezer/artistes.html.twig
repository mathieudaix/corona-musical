{% extends 'base.html.twig' %}

{% block title %}Artistes{% endblock %}

{% block body %}

    <main>

        <header class="section--default">
            <div class="container">
                <h1>Artistes</h1>
                <ul>
                    {% for artiste in artistes %}
                        <li>
                            <a href="">
                                <div class="circle" style="background-image: url( {{ artiste.picture_medium ? artiste.picture_medium : asset('build/images/default.jpg') }} )"></div>
                                <h2>{{ artiste.name }}</h2>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </header>

    </main>

{% endblock %}