{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}

    <main>

        <header class="genre-header section--default">
            <div class="container genre-header__container">
                <h1>Artistes</h1>
                <ul>
                    {% for artiste in artistes %}
                        <li>
                            <div style="background-image: url({{ artiste.picture_medium }})"></div>
                            <h2><a href="">{{ artiste.name }}</a></h2>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </header>

    </main>

{% endblock %}