{% extends 'base.html.twig' %}

{% block title %}Corono Musical - Albums{% endblock %}

{% block body %}

    <main>

        <header class="section--default">
            <div class="container">
                <h1 class="subtitle">Albums</h1>
                <ul class="grid--default">
                    {% for album in albums %}
                        <li>
                            <a href={{ path('album', {id: album.id}) }}>
                                <div style="background-image: url( {{ album.cover_medium ? album.cover_medium : asset('build/images/default.jpg') }} )"></div>
                                <h2>{{ album.title }}</h2>
                                <h3>{{ album.artist.name }}</h3>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </header>

    </main>

{% endblock %}