{% extends 'base.html.twig' %}

{% block title %}Genres{% endblock %}

{% block body %}

    <main>

        <header class="section--default">
            <div class="container">
                <h1>Genres</h1>
                <ul>
                    {% for genre in genres %}
                        <li>
                            <a href="{{ path('genre', {id: genre.id}) }}">
                                <div style="background-image: url( {{ genre.picture_medium ? genre.picture_medium : asset('build/images/default.jpg') }} )"></div>
                                <h2>{{ genre.name }}</h2>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </header>

    </main>

{% endblock %}