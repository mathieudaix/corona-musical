{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}

    <main>

        <div class="back">
            <div class="container">
                <a href="{{ path('genres') }}">
                    <svg xmlns='http://www.w3.org/2000/svg' width='512' height='512' viewBox='0 0 512 512'>
                        <polyline points='244 400 100 256 244 112' style='fill:none;stroke:#0b1417;stroke-linecap:round;stroke-linejoin:round;stroke-width:48px'/>
                        <line x1='120' y1='256' x2='412' y2='256' style='fill:none;stroke:#0b1417;stroke-linecap:round;stroke-linejoin:round;stroke-width:48px'/>
                    </svg>
                    Retour
                </a>
            </div>
        </div>

        <header class="genre-header section--default">
            <div class="container genre-header__container">
                <h1>{{ genre.name }}</h1>
                <ul>
                    {% for genreArtist in genreArtists %}
                        <li>
                            <div style="background-image: url({{ genreArtist.picture_medium }})"></div>
                            <h2><a href="">{{ genreArtist.name }}</a></h2>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </header>

    </main>

{% endblock %}